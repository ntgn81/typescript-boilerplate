{
  "name": "typescript-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for a typescript project",
  "main": "index.js",
  "scripts": {
    "start": "ts-node src/index.ts",
    "start-watch": "nodemon --watch src --ext json,ts,tsx --exec npm start",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "lint": "eslint ./src --ext .js,.jsx,.ts,.tsx"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ntgn81/typescript-boilerplate.git"
  },
  "author": "Nam Nguyen <ntgn81@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ntgn81/typescript-boilerplate/issues"
  },
  "homepage": "https://github.com/ntgn81/typescript-boilerplate#readme",
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/node": "^12.19.5",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^3.10.1",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  },
  "engines": {
    "node": "12.14.1"
  }
}
