{
  "name": "typescript-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for a typescript project",
  "main": "index.js",
  "scripts": {
    "start": "ts-node src/index.ts",
    "start-watch": "nodemon --watch src --ext json,ts,tsx --exec npm start",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "lint": "eslint ./src --ext .js,.jsx,.ts,.tsx"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ntgn81/typescript-boilerplate.git"
  },
  "author": "Nam Nguyen <ntgn81@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ntgn81/typescript-boilerplate/issues"
  },
  "homepage": "https://github.com/ntgn81/typescript-boilerplate#readme",
  "devDependencies": {
    "@types/node": "^12.12.41",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.1",
    "typescript": "^3.9.3"
  },
  "engines": {
    "node": "12.14.1"
  }
}
